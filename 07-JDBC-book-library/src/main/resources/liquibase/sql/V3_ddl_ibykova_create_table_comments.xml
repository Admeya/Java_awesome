<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet author="irina" id="createTableComments">
        <createTable tableName="comments">
            <column name="comment_id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="COMMENT_PK"/>
            </column>
            <column name="book_id" type="BIGINT"/>
            <column name="description" type="varchar(1000)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
    <changeSet author="irina" id="addAutoIncrementComment">
        <addAutoIncrement columnName="comment_id" columnDataType="BIGINT" incrementBy="1" tableName="comments" startWith="2"/>
    </changeSet>

    <changeSet author="irina" id="createTableBooksAuthors">
        <createTable tableName="books_authors">
            <column name="author_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="book_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <addForeignKeyConstraint  baseColumnNames="author_id"
                                  baseTableName="books_authors"
                                  baseTableSchemaName="public"
                                  constraintName="fk_author_books"
                                  onDelete="CASCADE"
                                  onUpdate="RESTRICT"
                                  referencedColumnNames="author_id"
                                  referencedTableName="authors"
                                  referencedTableSchemaName="public"/>

        <addForeignKeyConstraint  baseColumnNames="book_id"
                                  baseTableName="books_authors"
                                  baseTableSchemaName="public"
                                  constraintName="fk_books_authors"
                                  onDelete="CASCADE"
                                  onUpdate="RESTRICT"
                                  referencedColumnNames="book_id"
                                  referencedTableName="books"
                                  referencedTableSchemaName="public"/>
    </changeSet>



</databaseChangeLog>




